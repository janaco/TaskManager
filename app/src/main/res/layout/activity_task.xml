<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateTaskActivity">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_control">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/image_task"
                    android:layout_toRightOf="@+id/image_task"
                    android:gravity="end"
                    android:textStyle="bold"
                    tools:text="Active" />

                <ImageView
                    android:id="@+id/image_task"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/ic_image" />


                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_status"
                    android:layout_toEndOf="@+id/image_task"
                    android:layout_toRightOf="@+id/image_task"
                    android:padding="5dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    tools:text="@string/title" />


                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title"
                    android:layout_marginTop="10dp"
                    android:hint="@string/description"
                    android:padding="5dp"
                    android:textColor="@color/secondaryDarkColor"
                    android:textColorHint="@color/secondaryColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hint_due_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_description"
                    android:layout_marginTop="25dp"
                    android:text="@string/due_time"
                    android:textColor="@color/secondaryColor"
                    android:textColorHint="@color/secondaryColor"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hint_due_time"
                    android:padding="5dp"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp"
                    tools:text="18.01.2018 - 19.01.2018" />

                <TextView
                    android:id="@+id/hint_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_time"
                    android:layout_marginTop="25dp"
                    android:text="@string/location"
                    android:textColor="@color/secondaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hint_location"
                    android:padding="5dp"
                    android:text="@string/set_location"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />

            </RelativeLayout>

        </ScrollView>


        <Button
            android:id="@+id/btn_control"
            android:layout_width="match_parent"
            android:tag="@string/start"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_button"
            android:text="@string/start"
            android:textColor="@color/secondaryTextColor" />

    </RelativeLayout>


</LinearLayout>