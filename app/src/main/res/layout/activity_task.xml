<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateTaskActivity">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_control">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/image_task"
                        android:layout_toRightOf="@+id/image_task"
                        android:gravity="end"
                        android:textStyle="bold"
                        tools:text="Active" />

                    <ImageView
                        android:id="@+id/image_task"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        app:srcCompat="@drawable/ic_image" />


                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_status"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/image_task"
                        android:layout_toRightOf="@+id/image_task"
                        android:padding="5dp"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp"
                        tools:text="@string/title" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/description"
                    android:padding="5dp"
                    android:textColor="@color/secondaryDarkColor"
                    android:textColorHint="@color/secondaryColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hint_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/location"
                    android:textColor="@color/secondaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/set_location"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/layout_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/planned_start_time"
                            android:textColor="@color/secondaryColor"
                            android:textColorHint="@color/secondaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_planned_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/secondaryDarkColor"
                            android:textSize="16sp"
                            tools:text="18.01.2018 20:15" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_actual_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/planned_start_time"
                            android:textColor="@color/secondaryColor"
                            android:textColorHint="@color/secondaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_actual_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/secondaryDarkColor"
                            android:textSize="16sp"
                            tools:text="18.01.2018 20:15" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scheduled_duration"
                            android:textColor="@color/secondaryColor"
                            android:textColorHint="@color/secondaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_scheduled_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/secondaryDarkColor"
                            android:textSize="16sp"
                            tools:text="1 hour" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_time_spent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_spent"
                            android:textColor="@color/secondaryColor"
                            android:textColorHint="@color/secondaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_time_spent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/secondaryDarkColor"
                            android:textSize="16sp"
                            tools:text="30 mins" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeat"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/secondaryColor"
                    android:textColorHint="@color/secondaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="16sp"
                    tools:text="Once a day" />

            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/btn_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_button"
            android:tag="@string/start"
            android:text="@string/start"
            android:textColor="@color/secondaryTextColor" />

    </RelativeLayout>


</LinearLayout>